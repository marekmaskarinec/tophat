// **INTERNAL**
fn __setup*() {
	pool = []^Sound{}
}

// **INTERNAL**
fn __cycle*() {
	for i:=0; i >= 0 && i < len(pool); i++ {
		if !pool[i].isPlaying() {
			pool = delete(pool, i)
			i--
		}
	}
}
