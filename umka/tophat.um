
import (
	"rawdraw.um"
)

fn setup*(title: str) {
	rawdraw.setup(title, 500, 500)
	rawdraw.setbgcolor(0x000000ff)
	rawdraw.clearframe()
}

fn cycle*(w, h: ^int32, bgcolor: uint32) {
	rawdraw.swapbuffers()
	rawdraw.setbgcolor(bgcolor)
	rawdraw.clearframe()
	rawdraw.handleinput()
	rawdraw.getdimensions(w, h)
}
