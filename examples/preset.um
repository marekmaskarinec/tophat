// vim: filetype=umka

import (
	"tophat/rectangle.um"
	"tophat/tophat.um"
	"tophat/rawdraw.um"
)

fn main() {
	tophat.setup("title", 1280, 720)

	var w, h: int32

	cam := rectangle.mk(0, 0, 192, 108)

	for true {
		tophat.cycle(&w, &h, 0xffffffff, cam)

		rawdraw.drawtext("hello world", 2, 2, 0x000000ff, 2)
	}
}
