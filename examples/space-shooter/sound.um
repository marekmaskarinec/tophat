
import (
	"audio.um"
	"std.um"
)

var (
	dmg*, explosion*, shoot*: audio.Sound
)

fn init*() {
	var err: std.Err

	dmg, err = audio.load("sfx/dmgsound.wav")
	std.exitif(err)
	dmg.setVol(0.7)

	explosion, err = audio.load("sfx/explosion.wav")
	std.exitif(err)
	explosion.setVol(0.7)

	shoot, err = audio.load("sfx/shoot.wav")
	std.exitif(err)
	shoot.setVol(0.7)
}
