// vim: filetype=umka

type img* = struct {
	handle: int
}

fn loadimg(path: ^char): int

fn deleteimg(i: int)

fn iconset(i: int)

fn flipvimg(i: int)

fn fliphimg(i: int)

/*fn imgsetscale(x, y: real32, i: int)

fn imgrotate(rot: int32, i: int)

fn imgcopy(img: int): int*/

fn load*(path: str): img {
	return img{loadimg(&path[0])}
}

fn (i: ^img) delete*() {
	deleteimg(i.handle)
}

fn (i: ^img) setasicon*() {
	iconset(i.handle)
}

fn (i: ^img) flipv*() {
	flipvimg(i.handle)
}

fn (i: ^img) fliph*() {
	fliphimg(i.handle)
}
